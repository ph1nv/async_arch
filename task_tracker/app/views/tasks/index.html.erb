<h1>Tasks</h1>

<br />
<p><%= link_to 'New task', new_task_path %></p>
<br />

<p>
  <% if @account.role == 'admin' %>
    <%= button_to 'Shuffle tasks', tasks_shuffle_path, method: :post %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>public_id</th>
      <th>account</th>
      <th>description</th>
      <th>status</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.public_id %></td>
        <td><%= task.account.full_name %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
